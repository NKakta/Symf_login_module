{% extends 'layouts/admin-base.html.twig' %}

{% block title %} Users {% endblock %}

{% block body %}
    <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('order_index') }}">Back to list</a>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Customer</th>
                <th>Craftsman</th>
                <th>Content</th>
                <th>Completed</th>
                <th>From</th>
                <th>To</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ order.customer.email }}</td>
                <td>{{ order.craftsman.email }}</td>
                <td>{{ order.content }}</td>
                <td>{{ order.completed ? 'Yes' : 'No' }}</td>
                <td>{{ order.dateFrom|date("m/d/Y") }}</td>
                <td>{{ order.dateTo|date("m/d/Y") }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
