{% extends 'layouts/admin-base.html.twig' %}

{% block title %} Vartotojas {% endblock %}

{% block body %}
    <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('user_index') }}">Grįžti į sarašą</a>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Vardas</th>
                <th>Pavardė</th>
                <th>Prisijungimo firstName</th>
                <th>Elektroninis adresas</th>
                <th>Telefono numeris</th>
                <th>Kreditai</th>
                <th>Rolė</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phoneNum }}</td>
                <td>{{ user.credits }}</td>
                <td>{{ user.getRoleStr() }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}