{% extends 'layouts/admin-base.html.twig' %}

{% block title %} Users {% endblock %}

{% block body %}
    <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('order_new') }}">Create new Order</a>

    {% for order in orders %}
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <span class="h2">Id {{ order.id }}</span>
            <span class="h2">Number {{ order.number }}</span>
            <span class="h2">Price {{ order.totalPrice }}</span>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                    <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('order_show',   { 'id': order.id }) }}">Show</a>
                    <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('order_edit',   { 'id': order.id }) }}">Edit</a>
                    <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('order_delete', { 'id': order.id }) }}">Delete</a>
                </div>
            </div>
        </div>
    {% endfor %}

