{% extends 'layouts/admin-base.html.twig' %}

{% block title %} Coupon {% endblock %}

{% block body %}
    <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('coupons') }}">Back to list</a>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Value</th>
                <th>Valid Until</th>
                <th>Description</th>
                <td>Active</td>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ coupon.getName }}</td>
                <td>{{ coupon.getPrice }}</td>
                <td>{{ coupon.getValue }}</td>
                <td>{{ coupon.getValidDate|date('Y-m-d') }}</td>
                <td>{{ coupon.getDescription }}</td>
                <td>{{ coupon.getActive }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
