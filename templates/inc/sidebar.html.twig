<div class="col-lg-3 menu-border-right d-none d-lg-block menuside">
    {% if true %}
        <a class="discord-link" target="_blank" href="#">
            <div class="discord-block">
                <img class="img-fluid" src="{{ asset('assets/images/discord.png') }}" width="200px">
                <h4 class="text-uppercase mb-0 mt-2">Join us now!</h4>
                <p class="mb-0">
                    This website will be available only for 45 days. Join our discord, to get access
                    after 45 days.
                </p>
            </div>
        </a>
    {% endif %}
    <nav class="menu">
        <div class="container">
            <p class="mt-3">Browse by category</p>
            {% for region in regions %}
                <div class="menu-cat">
                    <h5 class="d-flex align-items-center">
                        <a class="d-flex align-items-center" href="#" data-toggle="collapse"
                           data-target="#{{ region|slugify }}">
                            <div class="menu-title-circle mr-2"></div>{{ region }}
                        </a>
                    </h5>
                    <div id="{{ region|slugify }}" class="collapse">
                        <ul>
                            {% for category in categories%}
                                <li>
                                    <a class="sub-nav-link" href="javascript:void(0);"
                                       category-name="{{ region }}"
                                       product-id="{{ category.id }}"
                                       region-name="{{ region|slugify }}"
                                    >
                                        {{ category.name }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endfor %}
        </div>
    </nav>
