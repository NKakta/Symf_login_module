{% extends 'layouts/admin-base.html.twig' %}

{% block title %} Resumes {% endblock %}

{% block body %}
    <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('admin_account_index') }}">Back to Resumes list</a>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="card card-primary" style="margin: auto; min-width: 50%;">
                    <div class="card-header">
                        <h3 class="card-title">Create Account</h3>
                    </div>

                    <div class="card-body">

                        <div class="form-group">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.password) }}
                            {{ form_widget(form.password) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.sold) }}
                            {{ form_widget(form.sold) }}
                        </div>
                        <div class="form-check">
                            {{ form_label(form.product) }}
                            {{ form_widget(form.product) }}
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
{% endblock %}
