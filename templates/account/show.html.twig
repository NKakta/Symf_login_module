{% extends 'layouts/admin-base.html.twig' %}

{% block title %} LOL accounts club {% endblock %}

{% block body %}
    <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('resume_index') }}">Back to list</a>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th>User</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ resume.name }}</td>
                <td>{{ resume.description }}</td>
                <td>{{ resume.createdAt|date("m/d/Y") }}</td>
                <td>{{ resume.updatedAt|date("m/d/Y") }}</td>
                <td>{{ resume.user.username }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
